@model IEnumerable<EduQuiz_.Models.Course>

@{
    ViewData["Title"] = "Manage Courses";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Manage Courses</h3>
                </div>
                <div class="card-body">
                    <p>
                        <a asp-action="AddCourse" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add New Course
                        </a>
                    </p>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>@course.CourseName</td>
                                    <td>@course.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
